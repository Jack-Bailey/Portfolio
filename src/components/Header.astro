---
import "../styles/global.scss";
import ThemeSelector from "./ThemeSelector.astro";
---

<nav>
    <a href="/">
        <h2>Jack <span>Bailey</span></h2>
    </a>
    <ul>
        <li>
            <a href="">
                About
            </a>
        </li>
        <li>
            <a href="">
                Projects
            </a>
        </li>
        <li>
            <a href="/blog">
                Blog
            </a>
        </li>
        <li class="contact-me">
            <a href="">Contact me</a>
        </li>
        <ThemeSelector />
    </ul>
</nav>

<div class="nav-background"></div>

<style lang="scss">
.nav-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4rem;
    background-color: #160F5A;
    z-index: 1;
}
nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    padding: 0 2rem;
    box-sizing: border-box;
    height: 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    > a {
        text-decoration: none;
        color: var(--accent-foreground);
        h2 {
            font-size: 2rem;
            margin: 0;
            span {
                color: var(--accent-muted);
            }
    
            text-shadow: 5px 5px 1rem rgba(0, 0, 0, 0.5);
        }
    }
    ul {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        list-style-type: none;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
        // box-sizing: border-box;
        li {
            // box-sizing: border-box;
            a {
                display: block;
                text-decoration: none;
                color: var(--accent-foreground);
                margin: 0;
                box-sizing: border-box;
                padding: 0.5rem 1rem;
                font-size: 1.2rem;
                transition: 250ms ease-in-out;
                font-family: "Quicksand", Arial, Helvetica, sans-serif;
            }

            &:not(:last-of-type) a {
                &:hover {
                    color: var(--accent-muted);
                }

            }

            &.contact-me a {
                background-color: var(--accent-muted);
                color: var(--accent-foreground);
                border-radius: 100rem;
                &:hover {
                    color: var(--accent-muted);
                    background-color: var(--accent-foreground);
                }
                // box-sizing: border-box;
                
            }
        }
    }
}
</style>