---
import "../styles/global.scss";
import ThemeSelector from "./ThemeSelector.astro";
import Logo from "../assets/logo.svg?raw";
import Envelope from "../assets/icons/envelope.svg?raw";
---

<nav>
    <a href="/">
        <div class="logo">
            <Fragment set:html={Logo} />
        </div>
        <h2>Jack <span>Bailey</span></h2>
    </a>
    <ul>
        <li class="about">
            <a href="">
                About
            </a>
        </li>
        <li class="projects">
            <a href="">
                Projects
            </a>
        </li>
        <li>
            <a href="/blog">
                Blog
            </a>
        </li>
        <li class="contact-me">
            <a href="">
                <span>Contact me</span>
                <div class="icon">
                    <Fragment set:html={Envelope} />
                </div>
            </a>
        </li>
        <ThemeSelector />
    </ul>
</nav>

<div class="nav-background"></div>

<style lang="scss">
.nav-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4rem;
    background-color: #160F5A;
    z-index: 1;
}
nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 3;
    padding: 0 2rem;
    box-sizing: border-box;
    height: 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    > a {
        text-decoration: none;
        color: var(--accent-foreground);
        height: max-content;
        .logo {
            display: none;
        }
        h2 {
            font-size: 2rem;
            margin: 0;
            span {
                color: var(--accent-muted);
            }
    
            text-shadow: 5px 5px 1rem rgba(0, 0, 0, 0.5);
        }
    }
    ul {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        list-style-type: none;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
        // box-sizing: border-box;
        li {
            // box-sizing: border-box;
            a {
                display: block;
                text-decoration: none;
                color: var(--accent-foreground);
                margin: 0;
                box-sizing: border-box;
                padding: 0.5rem 1rem;
                font-size: 1.2rem;
                transition: 250ms ease-in-out;
                font-family: "Quicksand", Arial, Helvetica, sans-serif;
            }

            &:not(:last-of-type) a {
                &:hover {
                    color: var(--accent-muted);
                }

            }

            &.contact-me a {
                background-color: var(--accent-muted);
                border-radius: 100rem;
                &:hover {
                    color: var(--accent-muted);
                    background-color: var(--accent-foreground);
                }

                span {
                    color: var(--accent-foreground);
                }

                .icon {
                    display: none;
                }
            }
        }
    }
}

@media screen and (max-width: 768px){
    nav {
        padding: 0 1rem;
        backdrop-filter: blur(2px);
        > a {
            height: 3rem;
            .logo {
                height: 3rem;
                width: 3rem;
                display: block;
            }
            h2 {
                display: none;
            }
        }
        ul {
            li {
                &.about,
                &.projects {
                    display: none;
                }

                &.contact-me a {
                    padding: 0.5rem;
                    span {
                        display: none;
                    }
                    .icon {
                        display: block;
                        height: 1.5rem;
                        :global(svg) {
                            height: 1.5rem;
                            width: 1.5rem;
                            fill: var(--accent-foreground);
                        }
                    }

                    &:hover {
                        .icon {
                            :global(svg) {
                                fill: var(--accent-muted);
                            }
                        }
                    }
                }
            }
        }
    }    
}
</style>